/* ===================================
   INFLUORA DEMO PAGE
   =================================== */

/* Demo Hero Combined Section */
.demo-hero-combined {
    min-height: 100vh;
    padding: 140px 20px 100px;
    position: relative;
    overflow: hidden;
}

.demo-hero-combined::before {
    content: '';
    position: absolute;
    top: -200px;
    left: 20%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.2) 0%, transparent 70%);
    pointer-events: none;
    animation: float 8s ease-in-out infinite;
}

.demo-hero-combined::after {
    content: '';
    position: absolute;
    top: -100px;
    right: 15%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(236, 72, 153, 0.15) 0%, transparent 70%);
    pointer-events: none;
    animation: float 10s ease-in-out infinite reverse;
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0) scale(1);
    }
    50% {
        transform: translate(30px, 30px) scale(1.1);
    }
}

/* Hero Content (Top Section) */
.demo-hero-content {
    text-align: center;
    margin-bottom: 80px;
    position: relative;
    z-index: 2;
}

.demo-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(167, 139, 250, 0.15) 100%);
    border: 2px solid rgba(167, 139, 250, 0.5);
    padding: 12px 28px;
    border-radius: 50px;
    font-size: 14px;
    font-weight: 800;
    color: #c4b5fd;
    margin-bottom: 28px;
    opacity: 0;
    transform: translateY(20px) scale(0.9);
    animation: badgeAppear 1s cubic-bezier(0.16, 1, 0.3, 1) 0.2s forwards;
    letter-spacing: 0.5px;
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
}

.demo-badge::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 50px;
    padding: 2px;
    background: linear-gradient(135deg, rgba(167, 139, 250, 0.6), rgba(236, 72, 153, 0.4));
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0.5;
}

@keyframes badgeAppear {
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.demo-main-title {
    font-size: clamp(44px, 6vw, 68px);
    font-weight: 900;
    margin-bottom: 20px;
    letter-spacing: -0.04em;
    opacity: 0;
    transform: translateY(40px);
    animation: titleSlideIn 1.2s cubic-bezier(0.16, 1, 0.3, 1) 0.4s forwards;
    line-height: 1.1;
}

.demo-main-title span {
    background: linear-gradient(135deg, #ffffff 0%, #e0e7ff 40%, #c4b5fd 70%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: gradientShift 4s ease infinite;
}

@keyframes gradientShift {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

@keyframes titleSlideIn {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.demo-main-subtitle {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.7);
    max-width: 650px;
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1.2s cubic-bezier(0.16, 1, 0.3, 1) 0.7s forwards;
    line-height: 1.7;
    font-weight: 400;
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Demo Interactive Section */
.demo-interactive {
    padding: 40px 0 100px;
    min-height: 80vh;
}

.demo-step {
    display: none;
    opacity: 0;
}

.demo-step.active {
    display: block;
    animation: stepFadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

@keyframes stepFadeIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.step-content {
    max-width: 1000px;
    margin: 0 auto;
}

.step-title {
    font-size: clamp(28px, 4vw, 36px);
    font-weight: 800;
    text-align: center;
    margin-bottom: 14px;
    letter-spacing: -0.02em;
    position: relative;
    width: 100%;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 0.9s forwards;
}

.step-title span {
    background: linear-gradient(135deg, #ffffff 0%, #e0e7ff 30%, #c4b5fd 60%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    animation: titleGradient 5s ease infinite;
}

@keyframes titleGradient {
    0%, 100% {
        background-position: 0% 50%;
    }
    50% {
        background-position: 100% 50%;
    }
}

.step-description {
    text-align: center;
    font-size: 17px;
    color: rgba(255, 255, 255, 0.65);
    margin-bottom: 50px;
    font-weight: 400;
    line-height: 1.6;
    max-width: 580px;
    margin-left: auto;
    margin-right: auto;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) 1.1s forwards;
}

/* Selection Grid */
.selection-grid {
    display: flex;
    flex-direction: column;
    gap: 48px;
    margin-bottom: 60px;
}

.selection-group {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.selection-label {
    font-size: 13px;
    font-weight: 800;
    letter-spacing: 1.5px;
    color: #a78bfa;
    text-transform: uppercase;
    position: relative;
    padding-left: 16px;
}

.selection-label::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 16px;
    background: linear-gradient(180deg, #6366f1 0%, #a78bfa 100%);
    border-radius: 2px;
}

.option-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 16px;
}

.option-card {
    background: linear-gradient(135deg, rgba(30, 30, 45, 0.9) 0%, rgba(20, 20, 35, 0.8) 100%);
    border: 1.5px solid rgba(255, 255, 255, 0.1);
    border-radius: 18px;
    padding: 28px 20px;
    text-align: center;
    cursor: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(20px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.1);
}

.option-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, rgba(99, 102, 241, 0.2), transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.option-card::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(167, 139, 250, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
}

.option-card:hover {
    transform: translateY(-6px) scale(1.02);
    border-color: rgba(167, 139, 250, 0.4);
    box-shadow: 0 20px 50px rgba(99, 102, 241, 0.25),
                0 0 0 1px rgba(167, 139, 250, 0.2),
                inset 0 1px 0 rgba(255, 255, 255, 0.15);
}

.option-card:hover::before {
    opacity: 1;
}

.option-card:hover::after {
    opacity: 1;
}

.option-card.selected {
    border-color: #a78bfa;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.2) 0%, rgba(167, 139, 250, 0.15) 100%);
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.4),
                0 0 0 2px rgba(167, 139, 250, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
    transform: translateY(-4px);
}

.option-card.selected::before {
    opacity: 1;
}

.option-card.selected::after {
    opacity: 1;
}

.option-icon {
    font-size: 40px;
    margin-bottom: 14px;
    line-height: 1;
    position: relative;
    z-index: 1;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.3));
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.option-card:hover .option-icon {
    transform: scale(1.1) translateY(-2px);
}

.option-card.selected .option-icon {
    transform: scale(1.08);
}

.option-name {
    font-size: 15px;
    font-weight: 700;
    color: var(--text-primary);
    position: relative;
    z-index: 1;
    letter-spacing: 0.3px;
}

/* Demo CTA Button */
.demo-cta {
    width: 100%;
    max-width: 450px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    background: linear-gradient(135deg, #6366f1 0%, #a78bfa 50%, #ec4899 100%);
    border: none;
    color: white;
    padding: 20px 40px;
    border-radius: 16px;
    font-size: 17px;
    font-weight: 800;
    cursor: none;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 10px 35px rgba(99, 102, 241, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    position: relative;
    overflow: hidden;
    letter-spacing: 0.3px;
}

.demo-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.demo-cta:hover:not(:disabled)::before {
    left: 100%;
}

.demo-cta:hover:not(:disabled) {
    transform: translateY(-4px) scale(1.03);
    box-shadow: 0 20px 50px rgba(99, 102, 241, 0.6),
                0 0 0 1px rgba(255, 255, 255, 0.15) inset;
}

.demo-cta:disabled {
    opacity: 0.4;
    cursor: not-allowed;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.3) 0%, rgba(167, 139, 250, 0.3) 100%);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.demo-cta.secondary {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: none;
}

.demo-cta.secondary:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(99, 102, 241, 0.3);
}

/* AI Processing Animation */
.ai-processing {
    text-align: center;
    padding: 60px 20px;
}

.processing-animation {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto 40px;
}

.brain-icon {
    font-size: 80px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% {
        transform: translate(-50%, -50%) scale(1);
    }
    50% {
        transform: translate(-50%, -50%) scale(1.1);
    }
}

.particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.particle {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--gradient-primary);
    border-radius: 50%;
    animation: orbit 3s linear infinite;
}

.particle:nth-child(1) { animation-delay: 0s; }
.particle:nth-child(2) { animation-delay: 0.5s; }
.particle:nth-child(3) { animation-delay: 1s; }
.particle:nth-child(4) { animation-delay: 1.5s; }
.particle:nth-child(5) { animation-delay: 2s; }
.particle:nth-child(6) { animation-delay: 2.5s; }

@keyframes orbit {
    0% {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(0deg) translateX(80px);
        opacity: 0;
    }
    50% {
        opacity: 1;
    }
    100% {
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(360deg) translateX(80px);
        opacity: 0;
    }
}

.processing-title {
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 40px;
}

.processing-steps {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 400px;
    margin: 0 auto;
}

.process-item {
    display: flex;
    align-items: center;
    gap: 16px;
    opacity: 0;
    transform: translateX(-20px);
}

.process-item.active {
    animation: processItemAppear 0.5s cubic-bezier(0.16, 1, 0.3, 1) forwards;
}

@keyframes processItemAppear {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.process-icon {
    width: 28px;
    height: 28px;
    background: rgba(99, 102, 241, 0.2);
    border: 2px solid var(--primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    color: var(--primary-light);
    flex-shrink: 0;
}

/* Results Dashboard */
.results-header {
    text-align: center;
    margin-bottom: 50px;
}

.results-title {
    font-size: clamp(28px, 4vw, 38px);
    font-weight: 800;
    margin-bottom: 12px;
}

.results-subtitle {
    font-size: 16px;
    color: var(--text-secondary);
}

.results-subtitle span {
    color: var(--primary-light);
    font-weight: 600;
}

.results-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
    margin-bottom: 50px;
}

.result-card {
    background: var(--glass-bg);
    border: 1px solid var(--glass-border);
    border-radius: 20px;
    padding: 28px;
    backdrop-filter: blur(20px);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.result-card:hover {
    transform: translateY(-5px);
    border-color: rgba(99, 102, 241, 0.3);
    box-shadow: 0 15px 40px rgba(99, 102, 241, 0.15);
}

.large-card {
    grid-column: span 2;
}

.wide-card {
    grid-column: 1 / -1;
}

.card-header {
    margin-bottom: 24px;
}

.card-title {
    font-size: 18px;
    font-weight: 700;
    color: var(--text-primary);
}

/* Engagement Score */
.engagement-score {
    display: flex;
    align-items: center;
    gap: 40px;
}

.score-circle {
    position: relative;
    width: 140px;
    height: 140px;
    flex-shrink: 0;
}

.score-ring {
    width: 120px;
    height: 120px;
    transform: rotate(-90deg);
}

.score-ring-bg {
    fill: none;
    stroke: rgba(255, 255, 255, 0.1);
    stroke-width: 8;
}

.score-ring-fill {
    fill: none;
    stroke: url(#scoreGradient);
    stroke-width: 8;
    stroke-linecap: round;
    stroke-dasharray: 326.73;
    stroke-dashoffset: 326.73;
    transition: stroke-dashoffset 2s cubic-bezier(0.16, 1, 0.3, 1);
}

.score-number {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 36px;
    font-weight: 900;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.score-label {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: var(--text-secondary);
    font-weight: 600;
}

.score-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.detail-item:last-child {
    border-bottom: none;
}

.detail-label {
    font-size: 14px;
    color: var(--text-secondary);
    font-weight: 500;
}

.detail-value {
    font-size: 16px;
    font-weight: 700;
    color: var(--primary-light);
}

/* Time Recommendation */
.time-recommendation {
    text-align: center;
}

.time-display {
    font-size: 24px;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 16px;
}

.time-reason {
    font-size: 14px;
    color: var(--text-secondary);
    margin-bottom: 24px;
}

.time-boost {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 16px;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: 12px;
}

.boost-label {
    font-size: 13px;
    color: var(--text-secondary);
    font-weight: 600;
}

.boost-value {
    font-size: 20px;
    font-weight: 800;
    color: #10b981;
}

/* Recommendations List */
.recommendations-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.recommendations-list li {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    padding: 12px;
    background: rgba(99, 102, 241, 0.05);
    border-radius: 10px;
    font-size: 14px;
    color: var(--text-primary);
}

.recommendations-list li::before {
    content: '💡';
    flex-shrink: 0;
    font-size: 16px;
}

/* Trending Topics */
.trending-topics {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
}

.trend-tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    background: rgba(236, 72, 153, 0.1);
    border: 1px solid rgba(236, 72, 153, 0.3);
    padding: 8px 14px;
    border-radius: 20px;
    font-size: 13px;
    font-weight: 600;
    color: #f472b6;
}

/* Strategy Content */
.strategy-content {
    font-size: 15px;
    line-height: 1.8;
    color: var(--text-secondary);
}

.strategy-content strong {
    color: var(--text-primary);
    font-weight: 700;
}

/* Demo Actions */
.demo-actions {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
}

/* Responsive */
@media (max-width: 1024px) {
    .large-card {
        grid-column: span 1;
    }

    .engagement-score {
        flex-direction: column;
        gap: 30px;
    }
}

@media (max-width: 768px) {
    .demo-hero-combined {
        padding: 120px 20px 80px;
        min-height: auto;
    }

    .demo-hero-combined::before {
        width: 350px;
        height: 350px;
        top: -150px;
    }

    .demo-hero-combined::after {
        width: 300px;
        height: 300px;
    }

    .demo-hero-content {
        margin-bottom: 60px;
    }

    .demo-badge {
        font-size: 13px;
        padding: 10px 22px;
    }

    .demo-badge svg {
        width: 14px;
        height: 14px;
    }

    .demo-main-title {
        font-size: 40px;
        margin-bottom: 18px;
    }

    .demo-main-subtitle {
        font-size: 18px;
    }

    .step-title {
        font-size: 26px;
    }

    .step-description {
        font-size: 16px;
        margin-bottom: 40px;
    }

    .selection-grid {
        gap: 36px;
    }

    .selection-label {
        font-size: 12px;
        letter-spacing: 1.2px;
    }

    .option-cards {
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 14px;
    }

    .option-card {
        padding: 22px 14px;
    }

    .option-icon {
        font-size: 32px;
    }

    .option-name {
        font-size: 14px;
    }

    .demo-cta {
        max-width: 100%;
        padding: 18px 32px;
        font-size: 16px;
    }

    .results-grid {
        grid-template-columns: 1fr;
    }

    .wide-card {
        grid-column: 1;
    }

    .score-details {
        width: 100%;
    }
}

@media (max-width: 480px) {
    .demo-hero-combined {
        padding: 100px 16px 60px;
    }

    .demo-hero-combined::before {
        width: 280px;
        height: 280px;
        top: -120px;
    }

    .demo-hero-combined::after {
        width: 240px;
        height: 240px;
    }

    .demo-hero-content {
        margin-bottom: 50px;
    }

    .demo-badge {
        font-size: 12px;
        padding: 8px 18px;
    }

    .demo-badge svg {
        width: 12px;
        height: 12px;
    }

    .demo-main-title {
        font-size: 34px;
        margin-bottom: 16px;
    }

    .demo-main-subtitle {
        font-size: 17px;
    }

    .processing-animation {
        width: 150px;
        height: 150px;
    }

    .brain-icon {
        font-size: 60px;
    }

    .step-title {
        font-size: 24px;
    }

    .step-description {
        font-size: 15px;
        margin-bottom: 36px;
    }

    .selection-grid {
        gap: 28px;
    }

    .selection-label {
        font-size: 11px;
        padding-left: 14px;
    }

    .selection-label::before {
        width: 3px;
        height: 14px;
    }

    .option-cards {
        gap: 12px;
    }

    .option-card {
        padding: 20px 12px;
    }

    .option-icon {
        font-size: 30px;
    }

    .results-title {
        font-size: 26px;
    }

